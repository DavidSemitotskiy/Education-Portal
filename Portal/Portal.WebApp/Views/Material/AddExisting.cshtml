@using Portal.Domain.Models
@using Portal.WebApp.Models.MaterialViewModels
@model AddExistingMaterialViewModel 

@{
    ViewData["Title"] = "Add existing";
}

<div>
    <div>
        @foreach (var material in @Model.Materials)
        {
            <div class="card" style="width: 18rem;display:inline-block;">
                <img src="~/courseImg.jpg" style="height:100px;" class="card-img-top" alt="Image wasn't found">
                <div class="card-body">
                    <h5 class="card-title">@material</h5>
                    <a asp-controller="Material" asp-action="AddExistingMaterial" asp-route-idCourse="@Model.IdCourse" asp-route-idMaterial="@material.Id" class="btn btn-primary">Add</a>
                </div>
            </div>   
        }
    </div>
</div>
