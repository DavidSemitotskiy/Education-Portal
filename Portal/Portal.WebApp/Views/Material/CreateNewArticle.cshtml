@using Portal.WebApp.Models.MaterialViewModels
@model AddArticleMaterialViewModel
@{
    ViewData["Title"] = "CreateNew";
}

<h1>CreateNew</h1>

<div>
    <form method="post">
        <input asp-for="IdCourse" hidden />
        <div>
            <div asp-validation-summary="ModelOnly" style="color:red;"></div>
        </div>
        <div>
            <label asp-for="Resource"></label><br />
            <input asp-for="Resource" type="url" class="form-control" placeholder="Enter Url..." aria-label="Enter Url..." style="width:100%;margin-bottom:5px" />
            <span asp-validation-for="Resource"></span>
        </div>
        <div>
            <label asp-for="DatePublication"></label><br />
            <input asp-for="DatePublication" type="date" class="form-control" placeholder="Enter Date..." aria-label="Enter Date..." style="width:100%;margin-bottom:5px" />
            <span asp-validation-for="DatePublication"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </form>
</div>
