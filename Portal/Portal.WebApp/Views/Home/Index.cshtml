@using Portal.WebApp.Models.CourseViewModels
@using cloudscribe.Pagination.Models
@model PagedResult<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
    ViewData["Controller"] = "Home";
    ViewData["Action"] = "Index";
}

<div>
    @{
        if (Model.Data.Count() == 0)
        {
            <div>
                <img src="~/nodata.jpg" style="width:100%;height:100%;" />
            </div>
        }
        else
        {
            <div>
                <form method="get" asp-action="Index">
                    <input type="text" class="form-control" name="searchString" style="width:30%;display:inline-block;" />
                    <input type="submit" class="btn btn-info" value="Search" />
                </form>
            </div>
            <br /><br />
            <div>
                <partial name="_PaginationPartial" model="Model" view-data="ViewData"></partial>
            </div>
            <div>
                @foreach (var course in @Model.Data)
                {
                    <div class="card" style="width: 18rem;display:inline-block;">
                        <img src="~/courseImg.jpg" style="height:100px;" class="card-img-top" alt="Image wasn't found">
                        <div class="card-body">
                            <h5 class="card-title">@course.Name</h5>
                            <p class="card-text">@course.Description</p>
                            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">View</a>
                            <a asp-controller="Course" asp-action="SubscribeCourse" asp-route-id="@course.Id" class="btn btn-danger">Subscribe</a>
                        </div>
                    </div>   
                }
            </div>
        }
    }
</div>
