@using Portal.Domain.Models
@model List<Course>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    @if(Model.Count() == 0)
    {
        <h1>You don't have any own courses</h1>
    }
    else
    {
        <div>
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var course in Model)
                    {
                        <tr>
                            <td>@course.Name</td>
                            <td>@course.Description</td>
                            <td>
                                <a><i class="bi bi-pencil-fill" style="display:inline-block;width:30px;height:30px;color:black;"></i></a>
                                @if (!course.IsPublished)
                                {
                                    <a asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@course.Id"><i class="bi bi-trash" style="display:inline-block;width:30px;height:30px;color:black;"></i></a>
                                }
                            </td>
                        </tr> 
                    }
                </tbody>
            </table>
        </div>
    }
    <a asp-action="CreateCourse">Create course</a>
</div>

