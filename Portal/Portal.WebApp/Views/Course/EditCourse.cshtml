@using Portal.WebApp.Models.CourseViewModels
@model EditCourseViewModel

@{
    ViewData["Title"] = "EditCourse";
}

<h1>EditCourse</h1>
<div>
    <form method="post" style="width:30%;">
        <div>
            <label asp-for="Name"></label><br />
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name..." aria-label="Enter Name..." style="width:100%;margin-bottom:5px" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <textarea asp-for="Description" type="text" class="form-control" placeholder="Enter Description..." aria-label="Enter Description..." style="width:100%;height:70px;margin-bottom:5px"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div>
            <label asp-for="AccessLevel"></label>
            <input asp-for="AccessLevel" type="number" class="form-control" placeholder="Enter AccessLevel..." aria-label="Enter AccessLevel..." style="width:100%;margin-bottom:5px" />
            <span asp-validation-for="AccessLevel"></span>
        </div>
        <div class="skills">
            <label>Skills:</label><br />
            @{
                @for(int i = 0; i < Model.Skills.Count(); i++)
                {
                    <div class="skill">
                        <label type="text" class="form-control" style="margin-bottom:5px;">@Model.Skills[i].Experience</label>
                        <a asp-controller="CourseSkill" asp-action="DeleteSkillFromCourse" asp-route-idCourse="@Model.Id" asp-route-idSkill="@Model.Skills[i].Id"><i class="bi bi-trash" style="display:inline-block;width:30px;height:30px;color:black;"></i></a>
                    </div>
                }

                <a asp-controller="CourseSkill" asp-action="CreateNew" asp-route-id="@Model.Id"><input class="btn btn-primary" value="Add new Skill" /></a>
              }
        </div>
        <div class="materials">
            <label>Materials:</label><br />
            @{
                @for(int i = 0; i < Model.Materials.Count(); i++)
                {
                    <div class="material">
                        <label type="text" class="form-control" style="margin-bottom:5px;">@Model.Materials[i]</label>
                        <a asp-controller="Material" asp-action="DeleteMaterialFromCourse" asp-route-idCourse="@Model.Id" asp-route-idMaterial="@Model.Materials[i].Id"><i class="bi bi-trash" style="display:inline-block;width:30px;height:30px;color:black;"></i></a>
                    </div>
                }

                <a asp-controller="Material" asp-action="CreateNewVideo" asp-route-id="@Model.Id"><input class="btn btn-primary" value="Add new Video" /></a>
                <a asp-controller="Material" asp-action="CreateNewBook" asp-route-id="@Model.Id"><input class="btn btn-primary" value="Add new Book" /></a>
                <a asp-controller="Material" asp-action="CreateNewArticle" asp-route-id="@Model.Id"><input class="btn btn-primary" value="Add new Article" /></a>
              }
        </div>
        <br />
        <div>
            <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
    </form>
    <a asp-controller="Course" asp-action="PublishCourse" asp-route-idCourse="@Model.Id"><input class="btn btn-success" value="Publish" /></a>
    <a asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@Model.Id"><input class="btn btn-danger" value="Delete" /></a>
</div>

